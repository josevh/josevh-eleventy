<div id="blog-index row">
    {% for post in collections.post|sort(true,false,attribute="date") %}
    <div class="col-12 py-2">
        <div class="row">
            <div class="col-12 col-sm-3">{{ post.date | blog_date(page.lang) }}</div>
            <div class="col-12 col-sm-9"><a href="{{ post.url }}">{{ post.data.title }}</a></div>
        </div>
    </div>
    {% endfor %}
</div>
